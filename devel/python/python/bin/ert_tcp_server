#!/usr/bin/env python
import sys
from ert.server import ErtSocket


config_file = sys.argv[1]
port = int(sys.argv[2])

ert_socket = ErtSocket(config_file , port)

status = ert_socket.evalCmd(["STATUS"])
if status[0] == "READY":
    ert_socket.listen()
else:
    sys.exit("Failed to open ERT handle to:%s " % config_file)

